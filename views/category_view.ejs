<%- include('partials/head2')%>




    <body>


        <%- include('partials/navbar')%>


            <div class="container-fluid p-5 mt-2" style="background-color:lightsteelblue;">

                <div class="row">
                    <div class="col-md-3  p-3 my-auto">
                        <div class="card shadow p-3 " style="background-color: #f2f897;">

                            <h1 class="text text-center card-header">
                                <%= category.name %>
                            </h1>
                            <div class="card-body">
                                <p class="lead card-text font-weight-bold text-center">
                                    <%= category.description %>
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6 p-3 my-auto">
                        <img src="<%= category.image %>" class="image-fluid shadow rounded mx-auto d-block"
                            style="width: 500px;height: 500px;" alt="Responsive image">


                    </div>

                    <div class="col-md-3 p-3 my-auto">
                        <div class="card p-2 shadow bg-info">
                            <img class="card-img-top" src="<%= category.hostImage %>" alt="Card image cap">
                            <div class="card-body">
                                <h2 class="card-text text-white " style="text-align: center;font-weight: bold;">
                                    FORUM HOST
                                </h2>
                                <p class="card-text text-center text-white font-weight-bold">
                                    <%=category.forumhost %>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>



            <div class="container mt-5">
                <div class="row p-0">
                    <div class="col-md-3 ">
                        <div class="card shadow-sm" style="background-color: #E9ECEF;">
                            <div class="card-body">
                                <h2 class="card-title text-primary">Links</h2>


                                <a href="https://www.seeds.ca"
                                    style=" font-size: 1.8vw;font-weight: bolder;text-decoration: underline;color: red;">Seeds
                                    of
                                    Diversity</a>
                                <p class="card-text">
                                    Seeds of Diversity is Canada's heritage seed network. Their website lists more than
                                    100 Canadian seed companies. Membership is free and gives you access to heritage
                                    seeds being
                                    grown
                                    by fellow Canadian gardeners and growers. Check it out!
                                </p>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-9 ">

                        <% for (let i=0; i < posts.length; i++) { %>
                            <%=posts[i].first_name%><br>
                                <%=posts[i].title%><br>
                                    <%=posts[i].description%><br>
                                        <%}%>

                                            <form action="/category/<%= category.id %>" method="post">
                                                <div class="card shadow-sm rounded" style="background-color: #E9ECEF;">
                                                    <div class="card-body">
                                                        <h4 class="card-title">Add Post</h4>
                                                        <div class="form-group">
                                                            <input type="text" name="title" placeholder="title">
                                                            <textarea class="form-control" placeholder="Write here..."
                                                                id="exampleFormControlTextarea1" rows="3"
                                                                name="description"></textarea>

                                                        </div>

                                                        <button class="btn btn-primary">Submit</button>
                                                    </div>
                                                    <div class="d-flex flex-column comment-section">
                                                        <div class=" p-2" style="background-color: #E9ECEF;">
                                                            <div class="d-flex flex-row user-info"><img
                                                                    class="rounded-circle"
                                                                    src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                                                                <div
                                                                    class="d-flex flex-column justify-content-start ml-2">
                                                                    <span class="d-block font-weight-bold name">Marry
                                                                        Andrews</span><span
                                                                        class="date text-black-50">Shared
                                                                        publicly - Jan 2020</span>
                                                                </div>
                                                            </div>
                                                            <div class="mt-2">

                                                                <p class="comment-text">
                                                                    <%= category.post %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="" style="background-color: #E9ECEF;">
                                                            <div class="d-flex flex-row fs-12">
                                                                <div class="like p-2 cursor"><i
                                                                        class="fa fa-thumbs-o-up"></i><span
                                                                        class="ml-1">Like</span></div>
                                                                <div class="like p-2 cursor"><i
                                                                        class="fa fa-commenting-o"></i><span
                                                                        class="ml-1">Comment</span></div>
                                                                <div class="like p-2 cursor"><i
                                                                        class="fa fa-share"></i><span
                                                                        class="ml-1">Share</span></div>
                                                            </div>
                                                        </div>
                                                        <div class=" p-2" style="background-color: #E9ECEF;">
                                                            <div class="d-flex flex-row align-items-start"><img
                                                                    class="rounded-circle"
                                                                    src="https://i.imgur.com/RpzrMR2.jpg"
                                                                    width="40"><textarea
                                                                    class="form-control ml-1 shadow-none textarea"></textarea>
                                                            </div>
                                                            <div class="mt-2 text-right"><button
                                                                    class="btn btn-primary btn-sm shadow-none"
                                                                    type="button">Post
                                                                    comment</button><button
                                                                    class="btn btn-outline-primary btn-sm ml-1 shadow-none"
                                                                    type="button">Cancel</button></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>





                    </div>



                </div>



            </div>

            <%- include('partials/footer')%>

                <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
                    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                    crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
                    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
                    crossorigin="anonymous"></script>
    </body>

    </html>